<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_view"
    tools:context=".MainActivity">
  <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabLayoutMenu"
      android:theme="@style/Theme.MaterialComponents.TabLayoutPink"
      android:layout_width="match_parent"
      app:tabIndicatorFullWidth="true"
      app:tabGravity="fill"
      android:layout_height="@dimen/view56dp"
      app:tabIndicatorColor="@color/shrine_1">
    <com.google.android.material.tabs.TabItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:icon="@drawable/sticky_notes"/>
    <com.google.android.material.tabs.TabItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:icon="@drawable/chat"/>
    <com.google.android.material.tabs.TabItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:icon="@drawable/settings"/>
  </com.google.android.material.tabs.TabLayout>
  <FrameLayout
      android:id="@+id/frameMenu"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
</LinearLayout>